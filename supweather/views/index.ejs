<html>

<head>
    <title>WEATHER APP </title>
    <style>
       body{
            margin: 0;
            padding: 0;
            background: url(images/image.jpg);
            background-size: cover;
            background-position: center;
            font-family: sans-serif;
        }
        .login-box{
            width: 320px;
            height: 420px;
            background: rgba(0, 0, 0, 0.5);
            color: #fff;
            top: 50%;
            left: 50%;
            position: absolute;
            transform: translate(-50%,-50%);
            box-sizing: border-box;
            padding: 70px 30px;
        }
        .avatar{
            width: 100px;
            height: 100px;
            border-radius: 50%;
            position: absolute;
            top: -50px;
            left: calc(50% - 50px);
        }
        
        #logo {
            width: 100%;
            height: 120px;
            margin-bottom:20px;
        }
        
        input[type=text],
        input[type=password] {
            display: block;
            padding: 10px;
            width: 260px;
            box-sizing: border-box;
            border: 1px solid #eee;
            font-size: 18px;
            margin: 10px 0;
        }
        
        input[type=button],
        input[type=submit] {
            padding: 10px 20px;
            border: 1px solid #eee;
            border-radius: 5px;
            font-size: 16px;
            background: #fff;
            cursor: pointer;
        }
        
        input[type=submit] {
            float: right;
        }
        
        input[type=button]:hover,
        input[type=submit]:hover {
            background: #ddd;
        }
    </style>
</head>

<body>

    <div class="login-box">
    <img src="images/avatar.png" class="avatar">
        <form action="/login" method="POST">
            <img src="images/logo.png" id="logo" />
            <input type="text" name="login" id="login" placeholder="Login" />
            <input type="password" name="password" id="password" placeholder="Password" />
            <hr>
            <input type="button" value="Signin" onclick="window.location='/signin'" />
            <input type="submit" value="Login" />
            
            <% if ( locals.viewErroMsg ) { %>
                <br><br>
                <span style="color:red"><%= locals.viewErroMsg %></span>
            <% } %>
        </form>
    </div>

</body>

</html>